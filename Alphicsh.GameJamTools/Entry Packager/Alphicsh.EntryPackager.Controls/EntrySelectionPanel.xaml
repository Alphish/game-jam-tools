<UserControl
  x:Class="Alphicsh.EntryPackager.Controls.EntrySelectionPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Alphicsh.EntryPackager.Controls"
  xmlns:cc="clr-namespace:Alphicsh.JamTools.Common.Controls;assembly=Alphicsh.JamTools.Common.Controls"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800"
>
  <Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
      <cc:ImpButton
        Margin="2"
        Style="{StaticResource PrimaryButton}"
        Width="240"
        Command="{Binding OpenEntryDirectoryCommand}"
      >Open entry directory</cc:ImpButton>
      
      <cc:ImpButton
        Margin="2"
        Style="{StaticResource PrimaryButton}"
        Width="240"
        Command="{Binding OpenEntryInfoCommand}"
      >Open entry information file</cc:ImpButton>

      <cc:ImpButton
        Margin="2"
        Style="{StaticResource PrimaryButton}"
        Width="240"
        Command="{Binding OpenEntryZipCommand}"
      >Open ZIP archive</cc:ImpButton>
    </StackPanel>
  </Grid>
</UserControl>
