<UserControl
  x:Class="Alphicsh.EntryPackager.Controls.Export.EntryExportActionBar"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Alphicsh.EntryPackager.Controls.Export"
  xmlns:cc="clr-namespace:Alphicsh.JamTools.Common.Controls;assembly=Alphicsh.JamTools.Common.Controls"
  mc:Ignorable="d" 
>
  <GroupBox Style="{StaticResource SimpleSection}">
    <cc:ImpButton
      Style="{StaticResource PrimaryButton}"
      Margin="2"
      Width="240"
      Height="48"
      Command="{Binding ExportCommand}"
      ToolTip="Exports entry files to a ZIP package"
      FontSize="20"
      FontWeight="Bold"
    >Export entry package</cc:ImpButton>
  </GroupBox>
</UserControl>
