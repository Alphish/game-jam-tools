<UserControl x:Class="Alphicsh.JamPlayer.Controls.Ranking.RankingSection"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Alphicsh.JamPlayer.Controls.Ranking"
  mc:Ignorable="d" 
  d:DesignHeight="700" d:DesignWidth="400"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="2*" MinHeight="120"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="1*" MinHeight="120"></RowDefinition>
    </Grid.RowDefinitions>
    
    <!-- Ranked entries list -->
    <local:RankingList Grid.Row="0" DataContext="{Binding RankedEntries}"></local:RankingList>
    
    <!-- Grid resizing splitter -->
    <GridSplitter
      Grid.Row="1"
      HorizontalAlignment="Stretch"
      Height="8"
      ShowsPreview="True"
    ></GridSplitter>
    
    <!-- Unranked entries list -->
    <local:RankingList Grid.Row="2" DataContext="{Binding UnrankedEntries}"></local:RankingList>
  </Grid>
</UserControl>
