<UserControl
  x:Class="Alphicsh.JamPlayer.Controls.Ranking.RankingToolbox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Alphicsh.JamPlayer.Controls.Ranking"
  mc:Ignorable="d" 
  d:DesignWidth="600"
>
  <GroupBox Style="{StaticResource SimpleSection}" Grid.Row="6">
    <Button Style="{StaticResource PrimaryButton}" Command="{Binding SaveRankingCommand}" Width="96" Margin="2">Save</Button>
  </GroupBox>
</UserControl>
