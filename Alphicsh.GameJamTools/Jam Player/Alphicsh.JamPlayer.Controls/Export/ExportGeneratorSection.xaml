<UserControl
  x:Class="Alphicsh.JamPlayer.Controls.Export.ExportGeneratorSection"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Alphicsh.JamPlayer.Controls.Export"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800"
>
  <GroupBox Header="Export">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="1*"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
      </Grid.RowDefinitions>

      <TextBox Grid.Row="0" Style="{StaticResource TextArea}" Text="{Binding ExportedText}"></TextBox>

      <Separator Grid.Row="1"></Separator>
      
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Style="{StaticResource PrimaryButton}" Command="{Binding GenerateTextCommand}" Width="144" Margin="2">Generate</Button>
        <Button Command="{Binding CopyTextCommand}" Width="144" Margin="2">Copy to clipboard</Button>
      </StackPanel>
    </Grid>
  </GroupBox>
</UserControl>
