<UserControl
  x:Class="Alphicsh.JamPlayer.Controls.Ratings.CommentSection"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Alphicsh.JamPlayer.Controls.Ratings"
  xmlns:cc="clr-namespace:Alphicsh.JamTools.Common.Controls;assembly=Alphicsh.JamTools.Common.Controls"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800"
>
  <GroupBox Header="Comment" Padding="8">
    <cc:ImpTextBox Style="{StaticResource TextArea}" Text="{Binding Comment}"/>
  </GroupBox>
</UserControl>
