<UserControl
  x:Class="Alphicsh.JamPlayer.Controls.Ratings.NumericScaleRatingControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Alphicsh.JamPlayer.Controls.Ratings"
  xmlns:commonControls="clr-namespace:Alphicsh.JamTools.Common.Controls;assembly=Alphicsh.JamTools.Common.Controls"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800"
>
  <StackPanel Orientation="Horizontal" Height="32">
    <Button Style="{StaticResource NotAvailableButton}" Command="{Binding ClearValueCommand}">N/A</Button>
    <commonControls:RatingSlider x:Name="RatingSliderElement"
      Minimum="0"
      Maximum="{Binding MaxValue}"
      TickFrequency="{Binding ValueStep}"
      Value="{Binding DisplayValue}"
      HasValue="{Binding HasValue}"
      local:NumericScaleTheming.Skin="{Binding Skin}"
    />
  </StackPanel>
</UserControl>
